{
  "name": "WhatsApp™ Quartz",
  "description": "Runs WhatsApp in background and makes it accessible via hotkey.",
  "version": "0.1.2",
  "manifest_version": 2,
  "icons": {
    "16": "src/icons/icon16.png",
    "32": "src/icons/icon32.png",
    "48": "src/icons/icon48.png",
    "64": "src/icons/icon64.png",
    "96": "src/icons/icon96.png",
    "128": "src/icons/icon128.png"
  },
  "permissions": [
    "https://*.whatsapp.com/*",
    "tabs"
  ],
  "commands": {
    "wa-toggle": {
      "suggested_key": {
        "default": "Alt+A"
      },
      "description": "Switch to WhatsApp™ tab."
    }
  },
  "background": {
    "scripts": [
      "src/background.js"
    ]
  },
  "browser_action": {
    "default_icon": {
      "16": "src/icons/icon16.png",
      "32": "src/icons/icon32.png",
      "48": "src/icons/icon48.png",
      "64": "src/icons/icon64.png",
      "96": "src/icons/icon96.png",
      "128": "src/icons/icon128.png"
    },
    "default_title": "WhatsApp™ Quartz"
  },
  "content_scripts": [
    {
      "js": [
        "src/content.js"
      ],
      "matches": [
        "https://*.whatsapp.com/*"
      ]
    }
  ],
  "web_accessible_resources": [
    "src/icons/icon.*"
  ]
}
